<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<include 
	    layout="@layout/header"/>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="5dp" >

	    <ListView
	        android:id="@+id/favorite_list_items"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/favorite_total_quantities"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true" >
	    </ListView>

	    <LinearLayout
	        android:id="@+id/li1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:orientation="horizontal"
	        android:padding="5dp" >

	        <Button
	            android:id="@+id/button1"
	            android:layout_width="fill_parent"
	            android:layout_height="35dp"
	            android:layout_marginLeft="40dp"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/green_btn"
	            android:layout_weight="1"
	            android:textColor="@color/white"
	            android:text="Buy" />

	        <Button
	            android:id="@+id/button2"
	            android:layout_width="fill_parent"
	            android:layout_height="35dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="40dp"
	            android:layout_weight="1"
	            android:textColor="@color/white"
	            android:background="@drawable/green_btn"
	            android:text="More" />
	    </LinearLayout>

	    <TextView
	        android:id="@+id/favorite_total_money"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/li1"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="20dp"
	        android:text="Total : $150" />

	    <TextView
	        android:id="@+id/favorite_total_quantities"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/favorite_total_money"
	        android:layout_alignLeft="@+id/favorite_total_money"
	        android:text="Quantites : 6" />

	</RelativeLayout>

</LinearLayout>
