<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/header"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textSize="17dp"
            android:textColor="@color/abc_search_url_text_holo"            
            android:text="From" />

        <EditText
            android:id="@+id/emailaddress"
            android:hint="loveyou@gmail.com"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress" >            
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textSize="17dp"
            android:textColor="@color/abc_search_url_text_holo"
            android:text="To" />

        <EditText
            android:id="@+id/emailtoaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Yuji Todoroki"
            android:editable="false"
             >            
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
           	android:textSize="17dp"
            android:textColor="@color/abc_search_url_text_holo"
            android:text="Subject" />

        <EditText
            android:id="@+id/email_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Inquiry about your product"
            android:layout_weight="1"
            android:inputType="textEmailAddress" >            
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_gravity="top"
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textSize="17dp"
            android:textColor="@color/abc_search_url_text_holo"
            android:text="Message" />

        <EditText
            android:id="@+id/email_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"            
            android:lines="6"
            android:layout_weight="1"
             >            
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="@color/abc_search_url_text_holo"
            android:text="Quantity" />

        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText 
                android:id="@+id/email_numberofquantities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="number"
                android:ems="3"/>
            <Spinner 
                android:id="@+id/email_numeral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/numeral"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="" />

        <TextView 
            android:id="@+id/email_btn_attachfile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attach files"/>

    </LinearLayout>

</LinearLayout>
