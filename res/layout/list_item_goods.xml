<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/list_items_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/adidas_shoes" />

    <TextView
        android:padding="3dp"
        android:id="@+id/list_items_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOB Price:US $30-60/Pair Quantity:10 Pair/Pairs Supply Ability:1500 Pair/Pairs per Month Payment Terms:T/T,PayPal" />

</LinearLayout>
